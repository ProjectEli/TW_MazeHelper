<Window x:Class="TW_MazeHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TW_MazeHelper"
        mc:Ignorable="d"
        Title="MainWindow" Width="{x:Static SystemParameters.PrimaryScreenWidth}" Height="{x:Static SystemParameters.PrimaryScreenHeight}"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="Manual" 
        Left="0" Top="0">
    <Grid>
        <WrapPanel Orientation="Vertical" Margin="0,100,0,0">
            <Button x:Name="visibilityToggle" Content="보이기/숨기기" Click="VisibilityToggle" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="3"/>
            <Image x:Name="putCardImage" Width="274.5" Height="367" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="UniformToFill"/>
            <Button x:Name="CloseButton" Content="종료하기" HorizontalAlignment="Left" VerticalAlignment="Top" Click="CloseButton_Click" Padding="3"/>
        </WrapPanel>
    </Grid>
</Window>
